<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <hr>
      <h2 class="text-center">Категории</h2>
      <hr>
      <div class="row">
        <% @categories.each_with_index do |category,index| %>
          <div class="col-sm-12 col-lg-4">
            <div class="text-center">
              <div class="card-group">
                <div class="card" style="height: 6rem">
                  <div class="card-body">
                    <a href="<%= category_path(category) %>" class="card-link">
                      <h5 class="align-middle"><%= category.name %></h5>
                    </a>
                  </div>
                </div>
              </div>
          <% if (index.next % 1).zero? %>
            <div class="col-md-12">
              <br>
            </div>
          <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
